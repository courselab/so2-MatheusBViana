# Init docm4.am
EXTRA_DIST += $(docm4_files)

all-local: $(docm4_files)

SUFFIXES = .m4

.m4:
	@echo "Creating file $@"
	@m4 --include=$(top_srcdir)/tools --define=_TOOL_PATH=../$(top_srcdir)/tools $< > $@
	@$(top_srcdir)/tools/syseg-reuse -y "$(COPYRIGHT_YEAR),$$(date +%Y)" -c "$(COPYRIGHT_NAME) <$(COPYRIGHT_EMAIL)>" -x "--template=syseg-output" $@ > /dev/null 

docm4_deps = $(top_srcdir)/tools/docm4.m4 $(top_srcdir)/tools/bintools.m4 

$(docm4_files) : $(docm4_deps)

clean-local:  $(docm4_files)
# End docm4.am


